{
  "apiVersion": "core.meshery.io/v1alpha1",
  "kind": "Edge",
  "metadata": {
    "description": "A relationship that represents a set of permissions"
  },
  "model": {
    "name": "core"
  },
  "subType": "Permission",
  "selectors": {
    "deny": {
      "from": [
        {
          "kind": "ClusterRole",
          "model": "kubernetes"
        },
        {
          "kind": "Role",
          "model": "kubernetes"
        },
        { 
          "kind": "ClusterRoleBinding",
          "model": "kubernetes"
        },
        {
          "kind": "RoleBinding",
          "model": "kubernetes"
        }
      ],
      "to": [
        {
          "kind": "ClusterRole",
          "model": "kubernetes"
        },
        {
          "kind": "Role",
          "model": "kubernetes"
        },
        {
          "kind": "ClusterRoleBinding",
          "model": "kubernetes"
        },
        {
          "kind": "RoleBinding",
          "model": "kubernetes"
        }
      ]
    },
    "allow":{
      "from": [
        {
          "kind": "ClusterRole",
          "model": "kubernetes"
        },
        {
          "kind": "Role",
          "model": "kubernetes"
        }
      ],
      "to": [
        {
          "model": "kubernetes"
        }
      ]
    }
  }
}